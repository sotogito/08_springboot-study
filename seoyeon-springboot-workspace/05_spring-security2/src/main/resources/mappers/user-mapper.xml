<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.podoseee.security.mapper.UserMapper">

  <resultMap id="userResultMap" type="UserDto">
    <id column = "user_no" property="userNo"/>
    <result column="user_id" property="userId"/>
    <result column="user_pwd" property="userPwd"/>
    <result column="user_name" property="userName"/>
    <result column="user_role" property="userRole"/>
  </resultMap>

  <insert id="insertUser" useGeneratedKeys="true">
    insert into tbl_user(user_id, user_pwd, user_name, user_role)
    values(#{userId}, #{userPwd}, #{userName}, #{userRole})
  </insert>

  <select id="selectUserById" resultMap="userResultMap">
   select user_no, user_id, user_pwd, user_name, user_role
      from tbl_user
   where user_id = #{userId}
  </select>

</mapper>